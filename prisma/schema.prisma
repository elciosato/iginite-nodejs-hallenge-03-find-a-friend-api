// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id                String @id @default(uuid())
  email             String @unique
  passwordHash      String
  responsablePerson String
  postCode          String
  address           String
  whatsapp          String

  @@map("organizations")
}
